# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

DELETE	/alerts/:id					controllers.Application.deleteAlert(id: Long)

# Collections
GET		/collections				controllers.CollectionController.list()
POST	/collections/save			controllers.CollectionController.save()
POST	/collections/:id/edit		controllers.CollectionController.edit(id: Long)
GET		/collections/:id			controllers.CollectionController.details(id: Long)
PUT     /collections/:id			controllers.CollectionController.update(id: Long)
POST	/collections/:id/activate	controllers.CollectionController.activateCollection(id: Long)
POST	/collections/:id/deactivate	controllers.CollectionController.deactivateCollection(id: Long)

# Seeds
POST    /seeds/						controllers.SeedController.save()
GET		/seeds/:id					controllers.SeedController.details(id: Long)
PUT     /seeds/:id					controllers.SeedController.update(id: Long)
POST	/seeds/:id/comment			controllers.SeedController.addComment(id: Long)

# Map Bootstrap images
GET     /assets/fonts/glyphicons-halflings-regular.eot            controllers.Assets.at(path="/public", file="/fonts/glyphicons-halflings-regular.eot")

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)